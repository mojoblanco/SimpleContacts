<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.ContactDetailsPage"
             xmlns:vm="clr-namespace:SimpleContacts.ViewModels"
             x:DataType="vm:ContactDetailsViewModel"
             Title="Contact Details">
             <TableView Intent="Data">
                <TableRoot>
                    <TableSection Title="Basic Info">
                        <TextCell Text="First Name" Detail=" {Binding FirstName}" />
                        <TextCell Text="Last Name" Detail="{Binding LastName}" />
                        <TextCell Text="Email Address" Detail="{Binding Email}" />
                        <TextCell Text="Phone Number " Detail="{Binding Phone}" />
                    </TableSection>
                </TableRoot>
             </TableView>
</ContentPage>